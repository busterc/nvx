{
  "name": "nvx",
  "version": "1.0.1",
  "description": "Run commands on multiple node versions as specified from .travis.yml, circle.yml or arguments; uses npx and is ideal for testing.",
  "author": {
    "name": "Buster Collings",
    "email": "busterc@gmail.com",
    "url": "https://about.me/buster"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "n",
    "nvm",
    "nvm-test",
    "testen",
    "tav",
    "npx",
    "test",
    "tests",
    "testing",
    "travis",
    "travis-ci",
    "circle",
    "circle-ci",
    "node",
    "version",
    "versions"
  ],
  "devDependencies": {
    "assert-dotenv": "^3.0.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.22.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "lec": "^1.0.1",
    "lint-staged": "^7.2.0",
    "nsp": "^3.2.1",
    "prettier": "^1.13.5"
  },
  "scripts": {
    "prepublish": "lec lib/cli.js -c LF && nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "busterc/nvx",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "ISC",
  "bin": {
    "nvx": "lib/cli.js",
    "nvx-test": "lib/cli-test.js"
  },
  "dependencies": {
    "execa": "^0.10.0",
    "meow": "^5.0.0",
    "p-map-series": "^1.0.0",
    "travis-or-circle": "^1.0.2"
  }
}
